@model IEnumerable<movie.Models.Series>
@{
    ViewBag.Title = "Listar";
}

<div class="container">
    
    <div class="texto-titulo">
        Séries
        <div class="ButtonCadastrar">
            <a asp-area="" asp-controller="Series" asp-action="Criar" class="btn btn-success" >Adicionar</a>    
        </div>
    </div> 

    <div class="row">
        <div class="col-md-7">
            <div>
                <table class="table">
                    <tr> 
                        <th>

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                       <th>
                            @Html.DisplayNameFor(model => model.Nota)
                        </th>
                        
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <button type="button" class="btn btn-info">+</button>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nota)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card">
                <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/en/6/69/The_americans_title_card.png">
                <div>
                    <h3><b>The Americans</b></h3>                    
                    <h4><b>Nota IMDB:</b> 10</h4>
                    <p><b>Status:</b> Não vista</p>
                    <div class="CardButtons">
                        <a asp-area="" asp-controller="Series" asp-action="Deletar" class="btn btn-danger">Deletar</a>
                        <a asp-area="" asp-controller="Series" asp-action="Editar" class="btn btn-warning">Editar</a>
                        <button type="button" class="btn btn-info">Vista</button>
                        <button type="button" class="btn btn-success">TOP 10</button>
                    </div>
                    
                </div>
            </div>
        </div>

    </div>
    
</div>